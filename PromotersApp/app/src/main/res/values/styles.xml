<resources>
    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="progressBarStyle">@style/MyProgressBar</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="appBarLayoutStyle">@style/AppTheme.AppBarOverlay</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">

        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Body1</item>

    </style>

    <style name="AppTheme.Toolbar.Primary" parent="Widget.MaterialComponents.Toolbar.Primary">

        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Body1</item>

    </style>

    <style name="DividerH">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorGrey</item>
    </style>

    <style name="DividerHorizontalWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/pt_sans</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="progressBarStyle">@style/MyProgressBar</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/pt_sans</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/pt_sans</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColorHint">@color/inputColorGrey</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorBlack</item>
        <item name="android:textAppearance">@color/colorBlack</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="boxStrokeColor">@color/colorBlack</item>
        <item name="boxStrokeWidth">5dp</item>

    </style>

    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">

        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>
    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="settings_switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#3C55EC</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42FF0000</item>
        <item name="android:fontFamily">@font/pt_sans</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">24sp</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textAllCaps">false</item>

    </style>
</resources>