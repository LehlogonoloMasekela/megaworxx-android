<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back"
            android:background="@color/colorPrimary"
            app:titleTextColor="@color/colorWhite"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="@dimen/filter_horizontal_padding"
            android:paddingTop="@dimen/filter_vertical_padding"
            android:paddingEnd="@dimen/filter_horizontal_padding"
            android:paddingBottom="@dimen/filter_vertical_padding"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/topHeaderDate"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/colorBlack"
                android:text="@string/campaign_survey_feedback_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

             <LinearLayout
                 android:layout_gravity="start"
                 android:layout_marginTop="20dp"
                 android:layout_marginBottom="20dp"
                 app:layout_constraintTop_toBottomOf="@id/topHeaderDate"
                 android:text="@string/campaign_survey_feedback_date"
                 android:orientation="horizontal"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:id="@+id/entryTypeLayout"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent">
                 <TextView
                     android:layout_marginStart="0dp"
                     android:layout_marginEnd="10dp"
                     android:textStyle="bold"
                     android:text="Entry Type: "
                     android:textSize="19sp"
                     android:textColor="@color/colorBlack"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />

                 <TextView
                     android:maxLines="2"
                     android:ellipsize="end"
                     android:layout_marginStart="0dp"
                     android:layout_marginEnd="10dp"
                     android:id="@+id/topHeaderStockEntry"
                     android:text="Stock Entry"
                     android:textSize="19sp"
                     android:textColor="@color/colorBlack"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
             </LinearLayout>

            <LinearLayout
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:gravity="center_vertical"
                android:background="@color/colorWhiteDark"
                android:id="@+id/itemDetailsHeader"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/top_vertical_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/entryTypeLayout"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <LinearLayout
                    android:weightSum="6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/table_header_size"
                        android:textStyle="bold"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorBlack"
                        android:text="Item Type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/table_header_size"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="4"
                        android:text="Description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/table_header_size"
                        android:textStyle="bold"
                        android:layout_weight="0.7"
                        android:textColor="@color/colorBlack"
                        android:text="Qty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_marginTop="@dimen/top_vertical_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemDetailsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:weightSum="6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:textSize="@dimen/table_item_size"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorBlack"
                        android:text="Phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/table_item_size"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="4"
                        android:text="Samsung S21"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/table_item_size"
                        android:layout_weight="0.7"
                        android:textColor="@color/colorBlack"
                        android:text="12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:weightSum="6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:textSize="@dimen/table_item_size"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorBlack"
                        android:text="Phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/table_item_size"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="4"
                        android:text="Samsung S21"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/table_item_size"
                        android:layout_weight="0.7"
                        android:textColor="@color/colorBlack"
                        android:text="12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:weightSum="6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:textSize="@dimen/table_item_size"
                        android:layout_weight="1.5"
                        android:textColor="@color/colorBlack"
                        android:text="Phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/table_item_size"
                        android:textColor="@color/colorBlack"
                        android:layout_weight="4"
                        android:text="Samsung S21"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="@dimen/table_item_size"
                        android:layout_weight="0.7"
                        android:textColor="@color/colorBlack"
                        android:text="12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>